header {
	width: 100%;
	height: 100vh;
	background: url('../imgs/workspace.jpg') no-repeat;
	background-size: cover;
}
.header-job-post {
  height: 100%;
  padding-bottom: 2em;
}
.logo-wrap {
	center(250px);
	padding-top: 4em;
	h1 {
		margin: 0;
	}
	img {
		center(180px);
	}
	p {
		margin: 0;
		font-size: 2em;
		text-align: center;
		text-transform: uppercase;
		font-weight: bolder;
		font-family: arial;
		margin-top: 20px;
		color: #fff;
		text-shadow: 0px 1px 1px #000;
	}
}
.header-tagline {
	center(350px);
	text-align: center;
	.tagline-color {
		margin-top: 1em;
		margin-bottom: 0;
		color: #fff;
		text-shadow: 0px 1px 1px #000;
		font-size: 1.6em;
	}
	.tagline-sub {
		padding: 1em;
		margin-top: 1em;
		margin-bottom: 0;
		border-top: 2px solid #F3F3F3;
		color: #fff;
		text-shadow: 0px 1px 1px #000;
	}
}
.new-job-button {
	center(155px);
	margin-top: 20px;
	.btn {
		display: block;
		border: 1px solid #ccc;
		background: transparent;
		font-size: 1em;
  		color: #fff;
  		transition: all .2s linear;
  		-webkit-transition: all .2s linear;
  		-moz-transition: all .2s linear;
  		&:hover {
  			background-color: #E34F26;
  			text-decoration: none;
  		}
	}
}

@media screen and (max-width: 380px) {
	.logo-wrap {
		center(170px);
		img {
			center(140px);
		}
		p {
			font-size: 1.5em;
		}
	}
	.header-tagline {
		center(290px);
		.tagline-color {
			font-size: 1.4em;
		}
	}
}
