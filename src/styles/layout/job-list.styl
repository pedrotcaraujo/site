.job-list-content {
	h1 {
		width: 100px;
		float: left;
	}
	fieldset {
		width: 300px;
		float: right;
		margin: 1em 0;
	}
}

.job-list-wrap {
	width: 100%;
	float: left;
	padding: 1em;
	border-bottom: 1px solid #ccc;
	&:hover {
		background-color: #F0F0F0;
	}
}

.icon {
	col(.12);
	text-align: center;
}

.text-group {
	col(.59);
}
.job-title {
	display: block;
	text-transform: uppercase;
	margin-bottom: 1em;
	color: #e34f26;
}
.name-company {
	font-size: .9em;
}
.country-job {
	col(.26);
	text-align: center;
	float: right;
	margin-right: 0;
}
.type-job {
	col(.15);
	text-align: center;
}

@media screen and (max-width: 380px) {
	.job-list-content {
		fieldset {
			width: 100%;
			margin: 0 0 1em;
		}
		h1 {
			text-align: center;
			width: 100%;
			font-size: 1.6em;
		}
		.type-job {
			float: right;
			width: auto;
			margin-right: 0;
			margin-bottom: 30px;
		}
	}
}
