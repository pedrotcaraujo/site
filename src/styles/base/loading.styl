.spinner {
	center(60px);
	margin-top: 40px;
	margin-bottom: 40px;
}
.spinner-three-box{
	width: 15px;
	height: 15px;
	border-radius: 50%;
	background-color: #ff7800;
	text-indent: -9999px;
	display: inline-block;
	-webkit-animation: threeBounceDelay 1.4s infinite ease-in-out;
		animation: threeBounceDelay 1.4s infinite ease-in-out;
	-webkit-animation-fill-mode: both;
		animation-fill-mode: both;
 }
.spinner-three-box.spinner-bounce1 {
	-webkit-animation-delay: -0.32s;
		animation-delay: -0.32s;
}
.spinner-three-box.spinner-bounce2 {
	-webkit-animation-delay: -0.16s;
		animation-delay: -0.16s;
}

@-webkit-keyframes threeBounceDelay {
  0%, 80%, 100% {
	-webkit-transform: scale(0);
			transform: scale(0);
  }
  40% {
	-webkit-transform: scale(1);
			transform: scale(1);
   }
}
@keyframes threeBounceDelay {
  0%, 80%, 100% {
	-webkit-transform: scale(0);
			transform: scale(0);
  }
  40% {
	-webkit-transform: scale(1);
			transform: scale(1);
  }
}

