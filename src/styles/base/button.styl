.btn-group {
	padding: .5em;
}
.btn {
	padding: .5em;
	border-radius: 5px;
	border: none;
	background-color: #fff;
	font-size: .9em;
	position: relative;
	outline: none;
	&.btn-cancel {
		background-color: #CB4E4D;
		box-shadow: 0 4px #ab3c3c;
		border-color: #ccc;
		color: #fff;
		&:hover {
			box-shadow: 0 2px #ab3c3c;
			top: 2px;
		}
	}
	&.btn-confirm {
		background-color: #17aa56;
		box-shadow: 0 4px #0E8C43;
		color: #fff;
		&:hover {
			box-shadow: 0 2px #0E8C43;
			top: 2px;
		}
	}
}
