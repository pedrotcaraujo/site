fieldset {
	border: none;
	padding: .5em;
	margin: 0;
}
label {
	display: block;
	width: 100%;
	margin-bottom: .3em;
	font-weight: bold;
	font-size: .9em;
}
input, select, textarea {
	border: 1px solid #ccc;
	border-radius: 5px;
	padding: .7em;
	font-size: .8em;
	width: 100%;
	background-color: #F3F3F3;
	outline: none;
}
select {
	width: 200px;
}
